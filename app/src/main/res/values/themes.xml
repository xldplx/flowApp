<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlowApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:fontFamily">@font/firacode</item>
    </style>

    <style name="PinInputStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KeypadButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/keypad_button_background</item>
    </style>

    <style name="TopUpKeypadButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@drawable/topup_keypad_button_background</item>
    </style>

    <style name="Theme.FlowApp" parent="Base.Theme.FlowApp">
        <item name="android:fontFamily">@font/firacode</item>
    </style>

</resources>